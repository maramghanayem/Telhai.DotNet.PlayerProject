<Window x:Class="Telhai.DotNet.PlayerProject.MusicPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telhai.DotNet.PlayerProject"
        mc:Ignorable="d"
        Title="MusicPlayer" Height="520" Width="900"
        Background="#222" Foreground="White" WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.2*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: player + metadata -->
        <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="0,0,20,0">

            <TextBlock x:Name="txtStatus" Text="Ready" Foreground="#AAA" HorizontalAlignment="Center"/>

            <TextBlock x:Name="txtCurrentSong"
                       Text="No Song Selected"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,10,0,5"
                       HorizontalAlignment="Center"/>

            <!-- File path (local, not from API) -->
            <TextBlock x:Name="txtFilePath"
                       Text=""
                       Foreground="#AAA"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>

            <!-- Album cover -->
            <Border BorderThickness="1" BorderBrush="#444" CornerRadius="10" Padding="6" Margin="0,0,0,10"
                    HorizontalAlignment="Center">
                <Image x:Name="imgCover" Width="180" Height="180" Stretch="UniformToFill"/>
            </Border>

            <!-- Metadata from API -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Track:" FontWeight="Bold"/>
                <TextBlock x:Name="txtMetaTrack" Text="-" Margin="0,0,0,8"/>

                <TextBlock Text="Artist:" FontWeight="Bold"/>
                <TextBlock x:Name="txtMetaArtist" Text="-" Margin="0,0,0,8"/>

                <TextBlock Text="Album:" FontWeight="Bold"/>
                <TextBlock x:Name="txtMetaAlbum" Text="-" Margin="0,0,0,8"/>
            </StackPanel>

            <Slider x:Name="sliderProgress"
                    IsMoveToPointEnabled="True"
                    Margin="0,0,0,15"
                    PreviewMouseLeftButtonDown="Slider_DragStarted"
                    PreviewMouseLeftButtonUp="Slider_DragCompleted"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="STOP" Click="BtnStop_Click" Width="80" Height="40" Margin="5"/>
                <Button Content="PLAY" Click="BtnPlay_Click" Width="100" Height="40" Margin="5"
                        FontWeight="Bold" Background="#007ACC" Foreground="White"/>
                <Button Content="PAUSE" Click="BtnPause_Click" Width="80" Height="40" Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <TextBlock Text="Volume " VerticalAlignment="Center"/>
                <Slider x:Name="sliderVolume" Minimum="0" Maximum="1" Value="0.5" Width="150"
                        ValueChanged="SliderVolume_ValueChanged"/>
            </StackPanel>
        </StackPanel>

        <!-- RIGHT: library -->
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Library" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <ListBox x:Name="lstLibrary"
                     Grid.Row="1"
                     Background="#333"
                     Foreground="White"
                     SelectionChanged="LstLibrary_SelectionChanged"
                     MouseDoubleClick="LstLibrary_MouseDoubleClick"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Add MP3" Click="BtnAdd_Click" Width="100" Margin="5"/>
                <Button Content="Remove" Click="BtnRemove_Click" Width="100" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

