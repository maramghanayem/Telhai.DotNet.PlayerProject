<Window x:Class="Telhai.DotNet.PlayerProject.Views.EditSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Song"
        Height="500"
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#222"
        Foreground="White">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

       
        <TextBlock Text="File:"
                   FontWeight="Bold"/>
        <TextBlock Grid.Row="1"
                   Text="{Binding FilePath}"
                   Foreground="#AAA"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"/>

        
        <TextBlock Grid.Row="2" Text="Track Name:" FontWeight="Bold"/>
        <TextBox Grid.Row="3"
                 Text="{Binding TrackName, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,10"/>

        
        <TextBlock Grid.Row="4" Text="Artist Name:" FontWeight="Bold"/>
        <TextBox Grid.Row="5"
                 Text="{Binding ArtistName, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,10"/>

        
        <TextBlock Grid.Row="6" Text="Album Name:" FontWeight="Bold"/>
        <TextBox Grid.Row="7"
                 Text="{Binding AlbumName, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,10"/>

        
        <TextBlock Grid.Row="8" Text="Images:" FontWeight="Bold" Margin="0,10,0,5"/>

        <ListBox x:Name="lstImages"
         Grid.Row="9"
         ItemsSource="{Binding Images}"
         Height="150"
         Background="#333"
         Foreground="White"/>

        <StackPanel Grid.Row="10" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Add Image" Width="100" Margin="5"
                    Click="BtnAddImage_Click"/>
            <Button Content="Remove Image" Width="100" Margin="5"
                    Click="BtnRemoveImage_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="11" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save" Width="100" Margin="5"
                    Click="BtnSave_Click"
                    Background="#007ACC"
                    Foreground="White"/>
            <Button Content="Cancel" Width="100" Margin="5"
                    Click="BtnCancel_Click"/>
        </StackPanel>

    </Grid>
</Window>
